<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/thirdColor</item>
        <item name="colorAccent">@color/firstColor</item>
        <item name="android:textColor">@color/firstColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">@color/primary</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>
